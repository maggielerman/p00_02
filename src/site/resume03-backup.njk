{# <div class="bg-stone-200 print:bg-red-400 hyphens-manual items-center"> #}
<div class="bg-red-400 hyphens-manual items-center h-full">

    <!-- Page -->
    <div class="pt-8 p-8 mx-auto page max-w-2xl print:max-w-letter md:max-w-letter md:h-letter xsm:p-8 sm:p-9 md:p-16 print:bg-stone-200 bg-stone-200 md:bg-stone-100 ">

      <!-- Name -->
      <header class="flex items-center mb-8 md:mb-11">
        <div   class="initials-container mr-5 text-base leading-none text-white bg-gray-700 font-medium print:bg-black px-3"
          style="padding-bottom: 0.6875rem; padding-top: 0.6875rem; /*11px*/">
          <div class="initial text-center" style="padding-bottom: 0.1875rem; /*3px*/">M</div>
          <div class="text-center initial">M</div>
        </div>
        <h1 class="text-2xl font-semibold text-gray-800 pb-px">
          {{author.name}}
        </h1>
      </header>
      <!-- end Name -->

      <!-- Column -->
      <div class="md:col-count-2 print:col-count-2 col-gap-md md:h-letter-col print:h-letter-col col-fill-auto">

        <section class="mt-8 first:mt-0">

          <!-- To keep in the same column -->
          <div class="break-inside-avoid">

            <h2 class="mb-4 font-bold tracking-widest text-sm2 text-gray-500 print:font-normal">
              ABOUT ME
            </h2>

            <section class="mb-4.5 break-inside-avoid">
              <header>
                <h3 class="text-lg font-semibold text-gray-700 leading-snugish">
                  {{author.occupation}}
                </h3>
              </header>
            <ul class="">
            {%for item in author.summary %}
              <li class="mt-2.1 text-md text-gray-700 leading-normal">
                <span class="absolute -ml-3 sm:-ml-3.2 select-none transform -translate-y-px">›</span>
                {{item}}
              </li>
            {%endfor%}
            </ul>
            </section>

          </div>


        </section>

        <section class="mt-8 first:mt-0">

          <!-- To keep in the same column -->
          <div class="break-inside-avoid">

            <h2 class="mb-4 font-bold tracking-widest text-sm2 text-gray-500 print:font-normal">
              EXPERIENCE
            </h2>

          </div>
          {%for job in resume.jobs%}
            <section class="mb-4.5 break-inside-avoid">
              <header>
                <h3 class="text-lg font-semibold text-gray-700 leading-snugish">
                  {{job.title}}
                </h3>
                <p class="leading-normal text-md text-gray-600">
                  {{job.start}} – {{job.end}} | {{job.company}}, {{job.location}}
                </p>
              </header>
              <ul class="">
                {%for duty in job.duties%}
                  <li class="mt-2.1 text-md text-gray-700 leading-normal">
                    <span class="absolute -ml-3 sm:-ml-3.2 select-none transform -translate-y-px">›</span>
                    {{duty}}
                  </li>
                {%endfor%}
              </ul>
            </section>
          {%endfor%}

        </section>

        <section class="mt-8 first:mt-0">

          <!-- To keep in the same column -->
          <div class="break-inside-avoid">

            <h2 class="mb-4 font-bold tracking-widest text-sm2 text-gray-500 print:font-normal">
              EDUCATION
            </h2>
          </div>
            {%for school in author.education%}
              <section class="mb-4.5 break-inside-avoid">
                <header>
                  <h3 class="text-lg font-semibold text-gray-700 leading-snugish">
                    {{school.name}}
                  </h3>
                  <p class="leading-normal text-md text-gray-600">
                    {{school.year}} | {{school.degree}}
                  </p>
                </header>
                  <p class="mt-2.1 text-md text-gray-700 leading-normal">
                    {{school.details}}
                  </p>
              </section>
            {%endfor%}
        </section>

