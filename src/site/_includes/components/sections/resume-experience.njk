{%for job in jobs%}
  <div>
    <dl>
      <div class="mt-12 md:mt-0 pb-8 md:pb-6 px-4 md:px-6 md:grid md:grid-cols-3 md:gap-12">
        <dt class="invisible md:visible md:pr-20 text-sm font-medium text-stone-500 md:text-right">
          <p class="mt-1 max-w-2xl text-sm text-stone-500">{{job.date}}</p>
          {%if job.companyUrl %}
           <a class="" href="{{job.companyUrl}}" target="_blank">
            <p class="inline-flex mt-1 max-w-2xl text-base text-stone-700 font-semi-bold hover:text-black">{{job.company}} 
              <span>
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M13.8284 9.17158L14.3284 9.17158V8.67158H13.8284V9.17158ZM9.58578 9.67158H13.8284V8.67158H9.58578V9.67158ZM13.3284 9.17158L13.3284 13.4142H14.3284L14.3284 9.17158L13.3284 9.17158ZM13.4749 8.81802L7.81802 14.4749L8.52512 15.182L14.182 9.52513L13.4749 8.81802Z" fill="#151515"/>
                </svg>
              </span> 
            </p>
          </a>
          {%else %}
            <p class="mt-1 max-w-2xl text-base text-stone-700 font-semi-bold">{{job.company}}</p>
          {%endif%}
          <p class="mt-2 max-w-2xl text-sm text-black">{{job.location}}</p>
        </dt>
        <dd class="-mt-28 font-normal text-sm text-black md:mt-0 md:col-span-2">
  
              <h3 class="-ml-3 md:-ml-20 text-lg leading-6 mb-2 tracking-wider font-medium text-black">{{job.title}}</h3>
        
          {# mobile only #}
            <div class="md:hidden -ml-3 leading-loose">
              <p class="mt-1 max-w-2xl text-sm">{{job.date}}</p>
              {%if job.companyUrl %}
                <a class="" href="{{job.companyUrl}}" target="_blank">
                  <p class="mt-1 max-w-2xl text-base font-semi-bold text-decoration underline underline-offset-6 hover:text-black">{{job.company}}</p>
                </a>
              {%else %}
                <p class="mt-1 max-w-2xl text-base font-semi-bold">{{job.company}}</p>
              {%endif%}
              <p class="mt-1 max-w-2xl text-sm">{{job.location}}</p>
            </div>
        {# end mobile only #}
                <ul class="list-none mt-2">
